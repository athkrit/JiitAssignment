<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginHorizontal="@dimen/stock_detail_padding"    android:layout_marginVertical="12dp"    android:orientation="horizontal">    <androidx.cardview.widget.CardView        android:id="@+id/cvVerticalBar"        android:layout_width="4dp"        android:layout_height="match_parent"        app:cardBackgroundColor="@color/primaryColor"        app:cardCornerRadius="2dp"        app:cardElevation="0dp" />    <LinearLayout        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginStart="@dimen/spacing_12"        android:layout_weight="1"        android:orientation="vertical">        <TextView            android:id="@+id/tvTitle"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="@string/ipo_year_title"            android:textColor="@color/fontPrimary"            android:textSize="15sp"            android:textStyle="bold" />        <TextView            android:id="@+id/tvPrice"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="6dp"            android:textColor="@color/fontPrimary"            android:textSize="15sp"            tools:text="@tools:sample/first_names" />    </LinearLayout></LinearLayout>