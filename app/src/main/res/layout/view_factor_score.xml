<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginHorizontal="@dimen/stock_detail_padding"    android:layout_marginVertical="12dp"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:id="@+id/tvScoreTitle"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:textColor="@color/fontPrimary"            android:textSize="15sp"            tools:text="Growth score" />        <TextView            android:id="@+id/tvScore"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="@color/fontPrimary"            android:textSize="15sp"            tools:text="99" />    </LinearLayout>    <androidx.cardview.widget.CardView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="6dp"        app:cardBackgroundColor="@android:color/transparent"        app:cardCornerRadius="2dp"        app:cardElevation="0dp">        <ProgressBar            android:id="@+id/pbScore"            style="?android:attr/progressBarStyleHorizontal"            android:layout_width="match_parent"            android:layout_height="4dp"            android:max="100"            android:progress="45"            android:progressBackgroundTint="@color/containerTertiary"            android:progressTint="@color/primaryColor" />    </androidx.cardview.widget.CardView></LinearLayout>