<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginHorizontal="@dimen/stock_detail_padding"    android:orientation="vertical">    <LinearLayout        android:id="@+id/vSectorContainer"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/sector_text"            android:textColor="@color/fontPrimary"            android:textSize="15sp"            android:textStyle="bold" />        <TextView            android:id="@+id/tvSector"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="@color/fontPrimary"            android:textSize="13sp" />    </LinearLayout>    <LinearLayout        android:id="@+id/vIndustryContainer"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="12dp"        android:orientation="horizontal">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/industry_text"            android:textColor="@color/fontPrimary"            android:textSize="15sp"            android:textStyle="bold" />        <TextView            android:id="@+id/tvIndustry"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="@color/fontPrimary"            android:textSize="13sp" />    </LinearLayout>    <LinearLayout        android:id="@+id/vWebsiteContainer"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="12dp"        android:orientation="horizontal">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/website_text"            android:textColor="@color/fontPrimary"            android:textSize="15sp"            android:textStyle="bold" />        <TextView            android:id="@+id/tvWebsite"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:autoLink="web"            android:textColor="@color/fontPrimary"            android:textSize="13sp" />    </LinearLayout></LinearLayout>