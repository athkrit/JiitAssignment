<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_marginHorizontal="@dimen/stock_detail_padding"    android:layout_height="wrap_content"    android:orientation="horizontal">    <LinearLayout        android:id="@+id/vHeaderContainer"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_gravity="center_vertical"        android:layout_weight="1"        android:orientation="vertical"        app:layout_constraintBottom_toBottomOf="@+id/vScoreContainer"        app:layout_constraintEnd_toStartOf="@+id/vScoreContainer"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="@+id/vScoreContainer">        <TextView            android:id="@+id/tvName"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:textColor="@color/fontPrimary"            android:textSize="18sp"            android:textStyle="bold"            tools:text="Siam inter comic" />        <TextView            android:id="@+id/tvSymbol"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="6dp"            android:textColor="@color/fontPrimary"            android:textSize="15sp"            tools:text="BLL:NO" />        <TextView            android:id="@+id/tvRanking"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="6dp"            android:textColor="@color/fontPrimary"            android:textSize="15sp"            tools:text="JITTA RANKING" />    </LinearLayout>    <LinearLayout        android:id="@+id/vScoreContainer"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:background="@color/primaryColor"        android:orientation="vertical"        android:padding="6dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toTopOf="parent">        <TextView            android:id="@+id/tvScore"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:textAlignment="center"            android:textColor="@color/white"            android:textSize="44sp"            android:textStyle="bold"            tools:text="0.0" />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="@string/jitta_score_title"            android:textAlignment="center"            android:textColor="@color/white"            android:textSize="15sp" />    </LinearLayout>    <androidx.constraintlayout.widget.Barrier        android:id="@+id/bHeaderContent"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        app:barrierDirection="bottom"        app:constraint_referenced_ids="vHeaderContainer, vScoreContainer" />    <com.github.mikephil.charting.charts.LineChart        android:id="@+id/vChart"        android:layout_width="match_parent"        android:layout_height="300dp"        android:layout_marginTop="6dp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/bHeaderContent" /></androidx.constraintlayout.widget.ConstraintLayout>