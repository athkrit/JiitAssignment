<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginVertical="12dp"    android:orientation="vertical">    <LinearLayout        android:id="@+id/vHeader"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginHorizontal="@dimen/stock_detail_padding"        android:orientation="horizontal">        <androidx.cardview.widget.CardView            android:id="@+id/cvVerticalBar"            android:layout_width="4dp"            android:layout_height="match_parent"            app:cardBackgroundColor="@color/primaryColor"            app:cardCornerRadius="2dp"            app:cardElevation="0dp" />        <LinearLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="@dimen/spacing_12"            android:layout_weight="1"            android:orientation="vertical">            <TextView                android:id="@+id/tvTitle"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:textColor="@color/fontSecondary"                android:textSize="13sp"                tools:text="@tools:sample/first_names" />            <TextView                android:id="@+id/tvDetail"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="6dp"                android:textColor="@color/fontPrimary"                android:textSize="15sp"                tools:text="@tools:sample/first_names" />        </LinearLayout>        <ImageView            android:id="@+id/vArrow"            android:layout_width="24dp"            android:layout_height="24dp"            android:layout_gravity="center" />    </LinearLayout>    <FrameLayout        android:id="@+id/vTableContainer"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginVertical="12dp" /></LinearLayout>